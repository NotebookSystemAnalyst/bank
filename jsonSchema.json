{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "requestId": {
      "type": "string",
      "description": "Уникальный идентификатор заявки",
      "pattern": "^REQ-\\d{8}-[A-Z]{2}\\d{2}$",
      "example": "REQ-20260224-AB12"
    },

    "employee": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "employeeId": {
          "type": "string",
          "pattern": "^REQ-\\d{8}-[A-Z]{2}\\d{2}$",
          "example": "EMP-1001"
        },
        "fullName": {
          "type": "string",
          "minLength": 5,
          "example": "Ivan Petrov"
        },
        "email": {
          "type": "string",
          "format": "email",
          "example": "ivan.petrov@company.com"
        }
      },

      "required": ["employeeId", "fullName", "email"]
    },

    "accessLevel": {
      "type": "string",
      "enum": ["STANDARD", "EXTENDED", "TEMPORARY"],
      "example": "STANDARD"
    },

    "validUntil": {
      "type": "string",
      "format": "date"
    }
  },

  "required": ["requestId", "employee", "accessLevel", "validUntil"]
}
